			margin: 0 auto
			position: absolute
			bottom 0
			left 50%
			margin-left: -185px
			overflow: visible
			&:before
				content ''
				position: absolute
				width: 64px
				height: 64px
				background-color white
				background-image url('../images/quotes.svg')
				background-repeat no-repeat
				background-position center center
				box-shadow 2.5px 1.7px 0 rgba(38, 50, 56, 0.1)
				top -32px
				left -32px
				border-radius 50%
			+below(860px)
				position: relative
				top auto
				left auto
				margin: 0 auto
				padding 30px 20px 60px 20px
