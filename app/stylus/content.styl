// TESTIMONIALS
	.testimonials
		min-height: 475px
		background url('../images/testimonials-bg.jpg') no-repeat center
		+below(860px)
			min-height: 400px
		&__in
			max-width: 1030px
			margin: 0 auto
			min-height inherit
