		&:first-child
			padding-left: 4.10%
		+below(400px)
			.workers__view
				margin: 0 auto
	&__name
		font-size: 19px
		color $darkgrey
	&__prof
		ms300()
		+below(400px)
			margin-bottom: 15px
	&__price
		span
			font-size: 10px
			vertical-align: top
	&__view
		border 1px solid $lightgreen
		color $lightgreen
		border-radius 3px
		font-size 14px
		padding: 6px 0
		text-align: center
		transition 0.3s background, color
		display: block
		width: 104px
		&:hover
			background: $lightgreen
			color white
	&__price,
	&__time,
	&__country
		+below(700px)
			display: none
	&__image,
	&__brief-desc
	&__btn
		+below(400px)
			display: block

.teams
	float: right
	+below(1090px)
		float: none
		width: 95%
		margin: 0 auto
	&__desc
		margin-bottom: 5px
		ms300()
	&__desc,
	&__heading
		color $darkgrey
	&__heading
		margin-bottom: 40px
	&__wrap
		text-align: center

.team
	width: 232px
	min-height: 275px
	border 1px solid #e0e7ee
	border-radius 3px
	position: relative
	display: block
	text-align: center
	margin-bottom: 40px
	overflow: hidden
	+below(1090px)
		display: inline-block
		margin-right: 30px
	+below(500px)
		margin: 0 auto 20px
	&__image
		display: block
		transition 0.5s transform
	&:hover .team__image,
	&:hover .team__logo
		transform scale(1.4)
	&__logo
		position absolute
		top 68px
		left: 0
		width: 100%
		transition 0.5s transform
		&_unfold
			top 52px
		img
			display: inline-block
			margin-bottom: 10px
	&__name
		color white
		font-size 19px
		ms300()
	&__info
		display: table
		text-align: center
		width: 100%
		height: 50px
		position: relative
		background: white
		.team__time,
		.team__country
			vertical-align: middle
			display table-cell
	&__time
		color $lightgreen

