// FOOTER

.footer
	&__in
		max-width: 1170px
		margin: 0 auto
	&__wrap
		max-width: 1030px
		margin: 0 auto
		padding-top: 88px
		padding-bottom: 80px
		overflow: hidden
		+below(1070px)
			text-align: center
			padding-top: 40px
			padding-bottom: 30px
	&__left-col,
	&__center-col,
	&__right-col
		display: inline-block
		margin-right: -4px
		vertical-align: top
	&__left-col
		width: 500px
		padding-right: 6%
		+below(1070px)
			width: 100%
			padding-right: 0
	&__center-col
		width: 300px
		padding-right: 3%
		+below(1070px)
			width: 100%
			padding-right: 0
	&__right-col
		width: 230px
		+below(1070px)
			padding-right: 0
	&__logo
		margin-bottom: 10px
	&__subscribe-text
		color $grey
		margin-bottom: 10px
	&__form
		margin-bottom: 32px
		+below(1070px)
			margin-bottom: 20px
	&__socials
		padding-left: 35px
		+below(1070px)
			padding-left: 0
	&__social-icon
		font-size: 21px
		margin: 0 13px
		color #a8b6bc
		transition 0.3s color
		&:hover
			color $lightgreen
	&__bottomline
		border-top 1px solid #e1e3e4
		padding 24px 0
		clearfix()
		+below(1200px)
			padding 24px 3%
		+below(700px)
			padding 10px
			text-align: center
	&__copyright,
	&__made-by
		text-transform: uppercase
	&__copyright
		float: left
		color $grey-light
		+below(700px)
			float: none
	&__made-by
		float: right
		span
			color $lightgreen
		+below(700px)
			float: none
.form_newsletter
	&__input,
	&__subscribe
		border-radius 3px
	&__input
		height: 50px
		ms300()
		font-size 17px
		background-color #eaebed
		border none
		width: 235px
		padding 18px
		+below(700px)
			height: 30px
			padding 10px
			width: 150px
	&__subscribe
		background-color: $lightgreen
		color white
		padding 0 15px
		border none
		height: 50px
		line-height: 50px
		font-size: 17px
		text-transform: uppercase
		transition 0.3s background-color
		+below(700px)
			height: 30px
			line-height: 30px
		&:hover
			background-color darken($lightgreen, 10%)
		ms300()


.blog,
.sitemap
	margin-top: 15px
.blog,
.sitemap
	&__heading
		margin-bottom: 22px
		color #546e7a
		+below(1170px)
			margin-bottom: 10px
.sitemap
	&__link
		display: block
		margin-bottom: 8px
		color $grey-light
		transition 0.3s color
		&:hover
			color $lightgreen
.blog
	font-size: 14px
	&__article
		color $grey-light
		margin-bottom: 20px
	&__text
		margin-bottom: 5px
	&__date
		color $grey
