.wrapper-top  min-height: 787px  background-color $grey-light  background url('../images/promo-bg.jpg') 50% / cover  +below(860px)    min-height: 600px  +below(500px)    min-height: 400px.header  &__in    max-width: 1170px    margin: 0 auto    padding-top: 60px    clearfix()    +below(1170px)      padding-left 5%      padding-right 5%    +below(1000px)      padding-left 2%      padding-right: 2%      padding-top 40px  &__logo    float: left    +below(860px)      display: block      margin: 0 auto 10px      text-align: center      float: none  &__nav-toggle    color white    margin-bottom: 20px    text-align: center    display: none    +below(860px)      display: block  &__nav    float: right    ms300()    +below(860px)      float: none      display: none      .nav__item,      .nav__link        text-align: center        display: block        &_login          border none.nav  &__link,  &__item    display: inline-block    color white  &__link      display: inline-block      padding 8px 17px      margin-left: 3px      &:hover        opacity 0.8      &:active        opacity 0.5      &_login        border 1px solid white        border-radius 3px.logo  font-size: 31px  color white  display: block  transition 0.4s opacity  &::first-letter    color $lightgreen  mslab()  &:hover    opacity: 0.8  &:active    opacity 0.5  &_dark    color $darkgrey.js-nav_visible	+below(860px)  		display: block !important		width: 100%